<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<br>
<% if @task.completed %>
    <i class="fa fa-check-square-o"></i> This task is completed
  <% else %>
    <i class="fa fa-square-o"></i> This task is not completed yet
  <% end %>
<br>
<%= link_to "Edit this task", edit_task_path %>
<br>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Delete #{@task.title}?"}
%>
